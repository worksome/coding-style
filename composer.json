{
    "name": "worksome/coding-style",
    "description": "Worksomes coding style",
    "type": "composer-plugin",
    "require": {
        "PHP": "^8.0",
        "composer-plugin-api": "^2.0",
        "canvural/larastan-strict-rules": "^1.0 || ^2.0",
        "friendsofphp/php-cs-fixer": "^3.8",
        "jetbrains/phpstorm-attributes": "^1.0",
        "nunomaduro/larastan": "^1.0 || ^2.0",
        "phpstan/phpstan": "^1.6.2",
        "phpstan/phpstan-mockery": "^1.0",
        "rector/rector": "^0.13.3",
        "worksome/code-sniffer": "dev-JIRA-6316_add-rule-to-disallow-todos"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "pestphp/pest": "^1.21",
        "spatie/invade": "^1.0",
        "spatie/ray": "^1.32"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\CodingStyle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\CodingStyle\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "oliver@worksome.com"
        }
    ],
    "extra": {
        "class": "Worksome\\CodingStyle\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test:phpstan": "pest --testsuite phpstan",
        "test:rector": "pest --testsuite rector",
        "test": [
            "@test:phpstan",
            "@test:rector"
        ]
    }
}
